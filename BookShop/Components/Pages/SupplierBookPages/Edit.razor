@page "/supplierbooks/edit"
@using Microsoft.EntityFrameworkCore
@using BookShop.Data
@inject IDbContextFactory<BookShop.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h2>SupplierBook</h2>
<hr />
@if (SupplierBook is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="SupplierBook" OnValidSubmit="UpdateSupplierBook" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="SupplierBook.SupplierId" value="@SupplierBook.SupplierId" />
                <div class="mb-3">
                    <label for="bookqnty" class="form-label">BookQnty:</label>
                    <InputNumber id="bookqnty" @bind-Value="SupplierBook.BookQnty" class="form-control" />
                    <ValidationMessage For="() => SupplierBook.BookQnty" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>
    </div>
}

<div>
    <a href="/supplierbooks">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int SupplierId { get; set; }

    [SupplyParameterFromForm]
    private SupplierBook? SupplierBook { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        SupplierBook ??= await context.SupplierBooks.FirstOrDefaultAsync(m => m.SupplierId == SupplierId);

        if (SupplierBook is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateSupplierBook()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(SupplierBook!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!SupplierBookExists(SupplierBook!.SupplierId))
            {
                NavigationManager.NavigateTo("notfound");
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/supplierbooks");
    }

    private bool SupplierBookExists(int supplierid)
    {
        using var context = DbFactory.CreateDbContext();
        return context.SupplierBooks.Any(e => e.SupplierId == supplierid);
    }
}
